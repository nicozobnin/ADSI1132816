doctype
html(lang="es")
  head
    meta(charset="UTF-8")
    title Atributos (jade)
    style(stylesheet).
      .verde {color: green;}
      .rojo {color: red;}
      .amarillo {background-color: yellow; }
      .centrar {text-align: center;}
      .rayado {text-decoration:underline}
      .active {background-color: #17E983;color: blue;}
  body
    h1 Atributos (jade)
    // Un solo atributo
    a(href='http://www.google.com') Ir a google
    // Varios atributos
    | &nbsp; | &nbsp;
    a(href='http://www.yahoo.com', target='_blank', class='link') Ir a Yahoo
    //Variable
    br
    br
    -var color = false
    //Condicionar valores de los atributos
    div(class=color ? 'verde': 'rojo') Color
    br
    br
    //Atributos en varias lineas
    input(
      type='number'
      min='10'
      max='99'
      placeholder='#'
    )
    br
    br
    // Atributos Booleanos
    | Falso
    input(
      type='radio'
      name='bool'
      checked = false        
    )
    | Verdadero
    input(
      type='radio'
      name='bool'
      checked = true
    )
    br
    br
    //Atributo Style
    button(style={'background-color': 'black', color: 'orange', border: 'none', padding: '10px' }) Boton
    // Atributo Class
    - var misclases = ['amarillo', 'centrar', 'rayado']
    h2(class=misclases) ADSI 1132816
    br
    br
    // Seccion Actual
    - var actual='/nosotros'
    nav
      li: a(class={active: actual === '/'} href='/') Inicio
      li: a(class={active: actual === '/nosotros'} href='/nosotros') Nosotros
      li: a(class={active: actual === '/servicios'} href='/servicios') Servicios
      li: a(class={active: actual === '/contacto'} href='/contacto') Contacto  
    br
    br
    //Clases e Identificadores Literales
    .amarillo Texto
    br
    .amarillo.centrar.rayado Texto
    br
    #cod1 Texto
    br
    #cod2.amarillo.centrar.rayado Texto
    //&attributes
    -var atributos = {'data-color': 'red'};