doctype
html(lang="es")
  head
    meta(charset="UTF-8")
    title Document
  body
    mixin Nombres
      ul
        li Carlos
         li Juan
          li Pedro
    +Nombres
    +Nombres
    +Nombres
    br
    hr
    mixin Mascota(name)
       li.Mascota= name
        ul
    +Mascota('Gato')
    +Mascota('Perro')
    +Mascota('Cerdo')
    br
    hr
    mixin article(title)
      .article
        .article-wrapper
        h1= title
        if block
          block
        else
          p No content provided

    +article('Hello world')

    +article('Hello world')
      p This is my
      p Amazing article
    br
    hr
    mixin link(href, name)
      a(class!=attributes.class, href=href)= name

    +link('/foo', 'foo')(class="btn")
    br
    hr
    mixin list(id, ...items)
      ul(id=id)
        each item in items
          li= item

    +list('my-list', 1, 2, 3, 4)